@using GovITHub.Auth.Common.Models
@inject SignInManager<ApplicationUser> SignInManager

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <section>
            @{
                var loginProviders = SignInManager.GetExternalAuthenticationSchemes().ToList();
                if (loginProviders.Count == 0)
                {
                    <div>
                        <p>
                            Nu sunt configurate servicii de autentificare externe.
                        </p>
                    </div>
                }
                else
                {
                    <p class="text-center">Sau autentifica-te printr-o retea de mai jos</p>
                    <form asp-controller="Account" asp-action="ExternalLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                        <div class="providers">
                            <div class="col-md-12">
                                @foreach (var provider in loginProviders)
                                {
                                    <div class="col-md-3">
                                        <button type="submit" class="btn btn-default @provider.AuthenticationScheme" name="provider" value="@provider.AuthenticationScheme" title="Log in using your @provider.DisplayName account">@provider.AuthenticationScheme</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>